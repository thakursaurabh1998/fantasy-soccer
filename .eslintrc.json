{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["standard", "prettier", "plugin:jest/recommended"],
    "plugins": ["prettier", "jest"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": ["error"]
    },
    "overrides": [
        {
            "files": ["**/*.test.js"],
            "env": {
                "jest": true
            }
        }
    ]
}
